<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="65dp"
    android:paddingVertical="2dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="6dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="6dp"
        android:layout_marginBottom="2dp"
        app:cardCornerRadius="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgAvatarIntegrante"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="3dp"
                tools:srcCompat="@tools:sample/avatars" />

            <TextView
                android:id="@+id/tvNomeIntegrante"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_weight="1"
                android:background="@drawable/border_right_item"
                android:padding="8dp"
                android:text="TextView" />

            <TextView
                android:id="@+id/tvConselhoIntegrante"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/border_right_item"
                android:layout_weight="1"
                android:padding="8dp"
                android:text="TextView" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fabRemoveIntegrante"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="15dp"
                android:layout_weight="1"
                android:clickable="true"
                app:backgroundTint="@color/red_delete"
                app:srcCompat="@drawable/round_delete" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fabUpdateIntegrante"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:clickable="true"
                app:backgroundTint="@color/yellow_update"
                app:srcCompat="@drawable/round_delete" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</android.support.constraint.ConstraintLayout>