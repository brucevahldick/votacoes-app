<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="6dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvProcesso"
                android:layout_width="100dp"
                android:layout_height="38dp"
                android:layout_marginTop="8dp"
                android:layout_weight="1"
                android:layout_marginBottom="10dp"
                android:background="@drawable/border_right_item"
                android:padding="8dp"
                android:text="Processo" />

            <TextView
                android:id="@+id/tvVotos"
                android:layout_width="37dp"
                android:layout_height="37dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                android:background="@drawable/border_right_item"
                android:padding="8dp"
                android:text="Votos" />

            <TextView
                android:id="@+id/tvTaxa"
                android:layout_width="37dp"
                android:layout_height="37dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/border_right_item"
                android:padding="8dp"
                android:layout_weight="1"
                android:text="Taxa" />

            <TextView
                android:id="@+id/tvStatus"
                android:layout_width="100dp"
                android:layout_height="38dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                android:background="@drawable/border_right_item"
                android:padding="8dp"
                android:text="Status" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/btFavoravel"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="15dp"
                android:layout_weight="1"
                android:clickable="true"
                android:backgroundTint="@color/green_vote"
                android:text="Button" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/btContrario"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:clickable="true"
                app:backgroundTint="@color/red_delete"
                android:text="Button" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</android.support.constraint.ConstraintLayout>